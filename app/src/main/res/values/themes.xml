<resources xmlns:tools="http://schemas.android.com/tools">    <!-- Base application theme. -->
    <style name="Theme.PexelsApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/main_background</item>
        <item name="colorOnPrimary">@color/white</item>        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background
        </item>        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/actor</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>]
    </style>

    <style name="Theme.PexelsApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">.01sp</item>
        <item name="android:alpha">0.0</item>
        <item name="fontFamily">@font/actor</item>
        <item name="actionTextColorAlpha">0</item>
    </style>

    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/actor</item>
    </style>

    <style name="Tab">
        <item name="android:textSize">10sp</item>
        <item name="tabGravity">center</item>
        <item name="fontFamily">@font/actor</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>