<resources xmlns:tools="http://schemas.android.com/tools">    <!-- Base application theme. -->
    <style name="Theme.PexelsApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/main_background</item>
        <item name="colorOnPrimary">@color/black</item>        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>        <!-- Status bar color. -->
        <item name="fontFamily">@font/actor</item>
        <item name="android:statusBarColor">@color/main_background</item>
        <item name="android:textSize">10sp</item>
        <item name="hideOnScroll">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true
        </item>        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PexelsApplication.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/actor</item>
        <item name="hideOnScroll">true</item>
    </style>

    <style name="Toolbar.TitleText.collapse" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">0.1sp</item>
        <item name="hideOnScroll">true</item>
        <item name="fontFamily">@font/actor</item>
    </style>

    <style name="Toolbar.TitleText.expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/actor</item>
    </style>

    <style name="Tab">
        <item name="android:textSize">10sp</item>
        <item name="tabGravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/actor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Image">
        <item name="android:gradientRadius">10sp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">        <!-- Apply attributes here -->    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>
</resources>